{
  "private": true,
  "version": "0.0.0",
  "description": "pipflow",
  "main": "index.js",
  "packageManager": "pnpm@8.6.0",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "reinstall": "rm -rf node_modules **/*/node_modules && pnpm install",
    "clean": "rm -rf dist packages/*/dist docs/.vitepress/cache docs/.vitepress/dist",
    "test": "node --experimental-vm-modules scripts/test.js",
    "changelog": "node ./scripts/changelog.js",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:release": "changeset publish --registry https://registry.npmjs.org",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.8.9",
    "gulp": "^4.0.2",
    "jest": "^29.7.0",
    "minimist": "^1.2.8",
    "rimraf": "5.0.1",
    "simple-git": "^3.21.0",
    "vitepress": "1.0.0-rc.22"
  }
}